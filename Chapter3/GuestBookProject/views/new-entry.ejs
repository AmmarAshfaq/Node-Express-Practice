<% include header %>

<h2>Write a new entry</h2>

<form method="post" role="form">
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" id-"title" name="title" placeholder="Enter Title" required/>
    </div>
    <div class="form-group">
<label for="content">Entry Text</label>
<textarea class="form-control" id="content" name="content" placeholder="Love Express!" rows="3" required></textarea>
    </div>
    <div class="form-group">
<input type="submit" value="Post Entry" class="btn btn-primary"/>
    </div>
</form>

<%include footer%>